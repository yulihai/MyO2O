<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="horizontal">



    <cn.bingoogolapple.badgeview.BGABadgeImageView
        android:id="@id/shopping_car"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="@dimen/mini_padding"
        android:src="@drawable/icon_shoping_car"
        app:badge_bgColor="@color/weekOrange"
        app:badge_dragable="true"
        app:badge_gravity="rightTop"
        app:badge_horizontalMargin="0dp"
        app:badge_verticalMargin="0dp"/>

   <!-- <ImageView
        android:id="@id/shopping_car"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="@dimen/mini_padding"
        android:src="@drawable/icon_shoping_car" />-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/small_padding">

        <TextView
            android:id="@id/total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="共：¥"
            android:textSize="@dimen/normal_font"/>

        <TextView
            android:id="@id/shopping_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/total"
            android:layout_toEndOf="@+id/total" />

        <Button
            android:id="@id/operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_selector"
            android:text="@string/connection_merchant" />

    </RelativeLayout>


</LinearLayout>