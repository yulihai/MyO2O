<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:color="@color/weekOrange">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="@color/weekOrange"/>
            <stroke android:color="@color/weekOrange" android:width="2dp"/>
        </shape>
    </item>

    <item  android:color="@color/orange">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="@color/orange"/>
            <stroke android:color="@color/orange" android:width="2dp"/>
        </shape>
    </item>

</selector>